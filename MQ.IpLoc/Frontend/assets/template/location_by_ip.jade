mixin loader
    div.loading-overlay
        div.spinner

div(ng-controller='LocationByIpCtrl')
    h1.page-header Местоположение пользователя по IP
    form.search-form(ng-submit="search()")
        .row
            .col-lg-6
                .input-group
                    input.form-control(placeholder="Введите IP адрес" ng-model="searchPattern" pattern="^(10|172|192)\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}$" title="IP адрес не валиден")
                    span.input-group-btn
                        button.btn.btn-default(type="submit") Искать

    h3.sub-header Результаты поиска
    div(style="min-height: 500px" ng-class="{ loading: isLoading }")
        +loader
        div(ng-google-map ng-model="currentLocation" style="min-height: 500px")
